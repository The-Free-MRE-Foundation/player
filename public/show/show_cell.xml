<row class="container" width=210 height=130 justifyContent='JUSTIFY_CENTER' alignItems='ALIGN_CENTER' flexDirection='FLEX_DIRECTION_ROW' style='asset: "Background4";'>
	<Button id=${cell.id} width=95 height=120 img=${JSON.stringify(cell.img)}></Button>
	<col width=115 height=120 justifyContent='JUSTIFY_FLEX_START' alignItems='ALIGN_FLEX_START' flexDirection='FLEX_DIRECTION_COLUMN_REVERSE'>
		<row width=115 height=15 justifyContent='JUSTIFY_CENTER' alignItems='ALIGN_CENTER' flexDirection='FLEX_DIRECTION_ROW'>
			<col width=75 height=60 justifyContent='JUSTIFY_FLEX_START' alignItems='ALIGN_CENTER' flexDirection='FLEX_DIRECTION_ROW'>
				<Text width=5 height=15 options='{textAnchor: "middle-left", textHeight: ${cell.titleHeight}}'>${cell.seasons} Seasons</Text>
			</col>
			<col width=40 height=60 justifyContent='JUSTIFY_FLEX_END' alignItems='ALIGN_CENTER' flexDirection='FLEX_DIRECTION_ROW'>
				<Text width=5 height=15 options='{textAnchor: "middle-right", textHeight: 0.07}' style='textColor: "#999999";'>${cell.episodes} Episodes</Text>
			</col>
		</row>
		<Text width=5 height=15 options='{textAnchor: "middle-left", textHeight: 0.05}' style='textColor: "#999999";'>${cell.genre}</Text>
		<Text width=5 height=80 options='{textAnchor: "middle-left", textHeight: ${cell.plotHeight}}' style='textColor: "#50DB60";'>${cell.plot}</Text>
	</col>
</row>